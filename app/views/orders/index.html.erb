<p id="notice"><%= notice %></p>

<h1>Shopping Cart</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= "#{course.name} #{course.subject.name}"  %></td>
        <td><%= course.description %></td>
        <td><%= sprintf('$%.2f',course.price/100) %></td>
        <%= form_with model: course do |f| %>
          <%= f.hidden_field :course_id,  value: course.id%>
          <%= f.number_field :quantity,  value: course.course_orders.quantity%>
          <%= f.submit "Update Quantity"%>
          <% end %>
          
        <td><%= link_to 'Show', course_path(course.tutor) %></td>
        <td><%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Checkout', buy_path %>

